        continue
    fi
    PROJECT_DB=\$CURL_OUT
fi


# set appdb connection via extra vars to conifer
  export EXTRA_CONIFER_ARGS=" --extra-vars modelconfig_appDb_connectionUrl=jdbc:oracle:oci:@\$PROJECT_DB"

  echo project is: \$PROJECT
  \$BASE_GUS/project_home/FgpUtil/Util/bin/conifer configure \\
  --project \$PROJECT \\
  --env \$ENV \\
  --site-vars \$SITE_VARS \\
  EuPathDBIrods \\
  \$EXTRA_CONIFER_ARGS

  CONFIGURED_PROJECTS=\$[\$CONFIGURED_PROJECTS+1]

done

# only build if we have configured at least one project
if [ "\$CONFIGURED_PROJECTS" -gt 0 ]
then
  if [[ "\$DO_BUILD" == "true" ]]
  then
    # Contains all the project dependencies
    bld EuPathDBIrods
  else
    echo "skipping build"
  fi
fi

  """.stripIndent()
}

